##############################
# GENERAL APP CONFIGURATION #
##############################

# Environment mode: development | staging | production
APP_ENV=development

# Logging level: debug | info | warning | error
LOG_LEVEL=info



##############################
# AUTHENTICATION & SECURITY #
##############################

# Must be at least 32 characters in production
SECRET_KEY=replace_with_generated_secret_key

# Default admin user (for initial login)
APP_USERNAME=admin
APP_PASSWORD=replace_with_secure_password

# JWT token expiration (minutes)
TOKEN_EXPIRE_MINUTES=30



##############################
# DATABASE CONFIGURATION     #
# (TURSO / libSQL)           #
##############################

# Turso primary database URL
# Example: libsql://db-name-username.turso.io
TURSO_DATABASE_URL=

# Auth token required for connecting to Turso
TURSO_AUTH_TOKEN=

# Optional: Replica database URL (for read scaling)
TURSO_REPLICA_URL=



##############################
# FILESYSTEM PATH CONFIG     #
##############################

# Local directories used by scraper & download system
RAW_PDF_DIR=./data/raw_pdfs
ANNOTATED_PDF_DIR=./data/annotated_pdfs
PROCESSED_DIR=./data/processed

# Export + ZIP staging directories
EXPORT_DIR=./data/exports
ZIP_DIR=./data/zipped



##############################
# BACKGROUND TASK SETTINGS   #
##############################

ALLOW_BACKGROUND_TASKS=true
TASK_WORKERS=2



##############################
# OPTIONAL FLAGS (FEATURES)  #
##############################

ENABLE_ZIP_DOWNLOADS=true
ENABLE_KEYWORD_MANAGEMENT=true
ENABLE_CLIENT_SELECTION=true
ENABLE_PROFILE_CUSTOMIZATION=true
